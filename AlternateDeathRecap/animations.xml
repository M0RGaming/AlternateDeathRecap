<GuiXml>
    <Animations>
        <AnimationTimeline name="AlternativeDeathRecapAttackAnimation">
            <Animations>
                <AnimationTimeline>
                    <Animations>
                        <!-- Icon -->
                        <AlphaAnimation duration="10" delay="15" startAlpha="0" endAlpha="1" />
                        <ScaleAnimation duration="25" startScale="0" endScale="1.3" />
                        <ScaleAnimation duration="50" delay="25" startScale="1.3" endScale="1" />

                        <!-- Style Icon -->
                        <AlphaAnimation duration="10" delay="15" startAlpha="0" endAlpha="1" />
                        <ScaleAnimation duration="25" startScale="0" endScale="1.3" />
                        <ScaleAnimation duration="50" delay="25" startScale="1.3" endScale="1" />

                        <!-- Label -->
                        <AlphaAnimation duration="50" delay="25" startAlpha="0" endAlpha="1" />

                        <!-- Damage Over Time Count -->
                        <AlphaAnimation duration="10" delay="15" startAlpha="0" endAlpha="1" />
                        <ScaleAnimation duration="25" startScale="0" endScale="1.3" />
                        <ScaleAnimation duration="50" delay="25" startScale="1.3" endScale="1" />

                        <!-- Health Text -->
                        <AlphaAnimation duration="10" delay="15" startAlpha="0" endAlpha="1" />
                        <ScaleAnimation duration="25" startScale="0" endScale="1.3" />
                        <ScaleAnimation duration="50" delay="25" startScale="1.3" endScale="1" />
                    </Animations>
                    <Callbacks>
                        <Callback delay="0">
                            if(self.isKillingBlow) then
                                PlaySound(SOUNDS.DEATH_RECAP_KILLING_BLOW_SHOWN)
                            end
                        </Callback>
                    </Callbacks>
                </AnimationTimeline>
            </Animations>
        </AnimationTimeline>
    </Animations>
</GuiXml>